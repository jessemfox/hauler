<div class="modal fade" id="haulImage-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-mymodal" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Make Your Haul</h4>
      </div>
      <div class="modal-body">
				<form enctype="multipart/form-data">
					<input type='hidden' name='post_image[haul_id]' value='<%=haul%>'> </input>
					<input type='file' name='post_image[photo]' class='file-upload-input'></input>
					
				
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default close-mymodal" data-dismiss="modal">Close</button>
        <button id='post-haul-image' type="button" class="btn btn-primary">Post</button>
				</form>
      </div>
    </div>
  </div>
</div>